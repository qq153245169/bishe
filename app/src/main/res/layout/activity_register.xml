<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="14dp"
        android:paddingTop="14dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:paddingRight="8dp"
            android:drawableLeft="@drawable/account_general_phone"
            android:text="手机号"/>
        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="#AAAAAAAA"
            android:paddingBottom="1.5dp"
            android:paddingTop="1.5dp"/>

        <EditText
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:background="@null"
            android:textColorHint="#FFFFFF"
            android:id="@+id/et_number"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66666666">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="14dp"
        android:paddingTop="14dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:paddingRight="8dp"
            android:drawableLeft="@drawable/account_general_password"
            android:text="密    码"/>
        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="#AAAAAAAA"
            android:paddingBottom="1.5dp"
            android:paddingTop="1.5dp"/>

        <EditText
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入至少6位密码"
            android:background="@null"
            android:textColorHint="#FFFFFF"
            android:id="@+id/et_psd"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66666666">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="14dp"
        android:paddingTop="14dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:paddingRight="8dp"
            android:drawableLeft="@drawable/account_general_password"
            android:text="确    认"/>
        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="#AAAAAAAA"
            android:paddingBottom="1.5dp"
            android:paddingTop="1.5dp"/>

        <EditText
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请再次输入密码"
            android:background="@null"
            android:textColorHint="#FFFFFF"
            android:id="@+id/et_psd_agin"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66666666">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="14dp"
        android:paddingTop="14dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:paddingRight="8dp"
            android:drawableLeft="@drawable/icon_user"
            android:text="姓    名"/>
        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="#AAAAAAAA"
            android:paddingBottom="1.5dp"
            android:paddingTop="1.5dp"/>

        <EditText
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入姓名"
            android:background="@null"
            android:textColorHint="#FFFFFF"
            android:id="@+id/et_name"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66666666">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="14dp"
        android:paddingTop="14dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:paddingRight="8dp"
            android:drawableLeft="@drawable/account_general_yzm"
            android:text="性    别"/>
        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="#AAAAAAAA"
            android:paddingBottom="1.5dp"
            android:paddingTop="1.5dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rg_sex"
            android:paddingLeft="70dp"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/rd_man"
                android:text="男"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="70dp"
                android:id="@+id/rd_women"
                android:text="女"/>
        </RadioGroup>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66666666">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="14dp"
        android:paddingTop="14dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:paddingRight="8dp"
            android:drawableLeft="@drawable/account_detail_zj"
            android:text="身份证"/>
        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="#AAAAAAAA"
            android:paddingBottom="1.5dp"
            android:paddingTop="1.5dp"/>

        <EditText
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入证件号"
            android:background="@null"
            android:textColorHint="#FFFFFF"
            android:id="@+id/et_sfz"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66666666">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="14dp"
        android:paddingTop="14dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:paddingRight="8dp"
            android:drawableLeft="@drawable/account_detail_zjh"
            android:text="驾驶证"/>
        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="#AAAAAAAA"
            android:paddingBottom="1.5dp"
            android:paddingTop="1.5dp"/>

        <EditText
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入证件号"
            android:background="@null"
            android:textColorHint="#FFFFFF"
            android:id="@+id/et_jsz"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66666666">

    </View>

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/btn_register"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:background="@drawable/register_btn_bg_selector"
        android:textColor="#FFFFFF"
        android:text="注册"/>
</LinearLayout>
